@{
    ViewData["Title"] = "About";
}


<div class="mdl-layout mdl-js-layout">
    <div class="mdl-layout__content">
        <div class="mdl-grid" style="padding:30px">
            <div class="mdl-cell mdl-cell--8-col">
                <div class="demo-card-wide mdl-card mdl-shadow--2dp" style="height:250px">
                    <div class="mdl-card__title">
                        Sloth, the online BCF reports generator
                    </div>
                    <div class="mdl-card__supporting-text">
                        This application is brought to you by <a href="http://www.bim42.com" style="text-decoration: underline">BIM 42</a>, with <i class="material-icons md-15">favorite</i>
                    </div>
                    <div class="mdl-card__actions mdl-card--border">
                        <ul>
                            <li>Licence MIT</li>
                            <li>Icons by Oksana Latysheva and Dmitry Mirolyubov from the <a href="https://thenounproject.com/" style="text-decoration: underline">Noun Project</a></li>
                            <li>Available on <a href="https://github.com/simonmoreau/Sloth" style="text-decoration: underline">GitHub</a></li>
                        </ul>
                    </div>
                </div>

            </div>
            <div class="mdl-cell mdl-cell--4-col">
                <div class="demo-card-wide mdl-card mdl-shadow--2dp">
                    <div class="mdl-card__title mdl-card__fullimage">
                        <a class="mdl-card__title-text" href="http://www.bim42.com" style="text-decoration: underline">The blog</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

